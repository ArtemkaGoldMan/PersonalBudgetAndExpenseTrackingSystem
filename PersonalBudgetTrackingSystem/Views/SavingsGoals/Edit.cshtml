@model PersonalBudgetTrackingSystem.Models.SavingsGoal

<h2>Edit Savings Goal</h2>

<form asp-action="Edit" method="post">
    @Html.HiddenFor(m => m.Id)
    <div class="form-group">
        <label for="name">Name</label>
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Enter goal name" })
    </div>
    <div class="form-group">
        <label for="targetAmount">Target Amount</label>
        @Html.TextBoxFor(m => m.TargetAmount, new { @class = "form-control", placeholder = "Enter target amount" })
    </div>
    <div class="form-group">
        <label for="currentAmount">Current Amount</label>
        @Html.TextBoxFor(m => m.CurrentAmount, new { @class = "form-control", placeholder = "Enter current amount" })
    </div>
    <div class="form-group">
        <label for="date">Date</label>
        <input type="date" class="form-control" id="date" name="Date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
