@model PersonalBudgetTrackingSystem.Models.Expense

<h2>Delete Expense</h2>
<p>Are you sure you want to delete this expense?</p>

<div>
    <strong>Description:</strong> @Model.Description
</div>
<div>
    <strong>Amount:</strong> @Model.Amount
</div>
<div>
    <strong>Category:</strong> @Model.Category
</div>
<div>
    <strong>Date:</strong> @Model.Date.ToShortDateString()
</div>

@using (Html.BeginForm("Delete", "Expenses", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id)
    <button type="submit">Delete</button>
    <a href="@Url.Action("Index", "Expenses")">Cancel</a>
}
