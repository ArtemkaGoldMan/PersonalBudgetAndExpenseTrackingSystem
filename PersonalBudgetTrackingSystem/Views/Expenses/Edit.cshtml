@model PersonalBudgetTrackingSystem.Models.Expense

<h2>Edit Expense</h2>

<form asp-action="Edit" method="post">
    @Html.HiddenFor(m => m.Id)
    <div class="form-group">
        <label for="description">Description</label>
        @Html.TextBoxFor(m => m.Description, new { @class = "form-control", placeholder = "Enter description" })
    </div>
    <div class="form-group">
        <label for="amount">Amount</label>
        @Html.TextBoxFor(m => m.Amount, new { @class = "form-control", placeholder = "Enter amount" })
    </div>
    <div class="form-group">
        <label for="category">Category</label>
        <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Select Category
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                @foreach (var category in ViewBag.Categories as List<string>)
                {
                    <a class="dropdown-item" href="#" onclick="document.getElementById('categoryInput').value = '@category'; return false;">@category</a>
                }
            </div>
        </div>
        <input type="hidden" id="categoryInput" name="Category" value="@Model.Category" />
    </div>
    <div class="form-group">
        <label for="date">Date</label>
        <input type="date" class="form-control" id="date" name="Date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
