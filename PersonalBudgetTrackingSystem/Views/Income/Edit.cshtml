@model PersonalBudgetTrackingSystem.Models.Income

<h2>Edit Income</h2>

<form asp-action="Edit" method="post">
    @Html.HiddenFor(m => m.Id)
    <div class="form-group">
        <label for="source">Source</label>
        @Html.TextBoxFor(m => m.Source, new { @class = "form-control", placeholder = "Enter source" })
    </div>
    <div class="form-group">
        <label for="amount">Amount</label>
        @Html.TextBoxFor(m => m.Amount, new { @class = "form-control", placeholder = "Enter amount" })
    </div>
    <div class="form-group">
        <label for="date">Date</label>
        <input type="date" class="form-control" id="date" name="Date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
