@model PersonalBudgetTrackingSystem.Models.BudgetCategory

<h2>Edit Category</h2>

<form asp-action="Edit" method="post">
    @Html.HiddenFor(m => m.Id)
    <div class="form-group">
        <label for="name">Name</label>
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Enter category name" })
    </div>
    <div class="form-group">
        <label for="budgetLimit">Budget Limit</label>
        @Html.TextBoxFor(m => m.BudgetLimit, new { @class = "form-control", placeholder = "Enter budget limit" })
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
